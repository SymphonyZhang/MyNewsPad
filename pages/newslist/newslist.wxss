/* pages/newslist/newslist.wxss */
.head {
  background: red;
  height: 100rpx;
  overflow: hidden;
}

.head input {
  width: 80%;
  height: 60rpx;
  background-color: white;
  margin-top: 20rpx;
  margin-left: auto;
  margin-right: auto;
  border-radius: 10rpx;
  font-size: 12px;
  padding-left: 12rpx;
  padding-right: 12rpx;
}

.type-pad {
  height: 80rpx;
  border-bottom: 2rpx solid #F0F0F0;
  line-height: 80rpx;
}

.type-pad text {
  margin-left: 32rpx;
  font-size: 14px;
}

.type-pad text.select {
  color: red;
}

.body {
  background-color: #F0F0F0;
}

.body .item:first-child{
  padding-top: 0rpx;
}

.body .item{
  margin-top: 20rpx;
  padding-bottom: 10rpx;
  padding-top: 20rpx;
  background-color: #FFFFFF;
}

.body .item .user-info {
  height: 70rpx;
  padding-left: 20rpx;
  padding-top: 10rpx;
}

.body .item .user-info image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.body .item .user-info text {
  font-size: 28rpx;
  margin-left: 20rpx;
}

.body .item .user-info .focus {
  padding-left: 20rpx;
  border-left: 2rpx solid #CCCCCC;
}

.body .item .user-info .no-focus {
  color: red;
}

.body .item .title {
  font-size: 28rpx;
  padding: 20rpx;
}

.body .item .content {
  padding: 0 20rpx;
}

.body .item .content video {
  width: 100%;
  height: 450rpx;
}

.body .item .content image {
  width: 100%;
}